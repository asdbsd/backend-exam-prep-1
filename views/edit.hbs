<section id="edit-page">
    <div class="editSection">
        <div class="info">
            <h2>Edit your own post!</h2>
        </div>
        {{#with post}}
        <form action="/all-posts/edit/{{_id}}" method="POST" class="editForm">
            <h2>Edit Post</h2>
            <ul class="noBullet">
           
                <li>
                    <label for="title">Title:</label>
                    <input type="text" class="inputFields" id="title" placeholder="Two golden snub-nosed monkeys"
                        name="title" value="{{title}}" />
                </li>
                <li>
                    <label for="key-word">Keyword:</label>
                    <input type="text" class="inputFields" id="keyword" placeholder="Animal" name="keyword" value="{{keyword}}" />
                </li>
                <li>
                    <label for="location">Location:</label>
                    <input type="text" class="inputFields" id="location" placeholder="North America" name="location"
                        value="{{location}}" />
                </li>
                <li>
                    <label for="date">Date of creation:</label>
                    <input type="text" class="inputFields" id="date" placeholder="18.02.2021" name="date" value="{{date}}" />
                </li>
                <li>
                    <label for="image">Wildlife image:</label>
                    <input type="text" class="inputFields" id="image" placeholder="http:/..." name="imageUrl"
                        value="{{imageUrl}}" />
                </li>
                <li>
                    <label for="description">Description:</label>
                    <textarea id="description" class="inputFields" name="description"
                        placeholder="Monkey is...">{{description}}</textarea>
                </li>
                
                <li id="center-btn">
                    <button id="edit-btn">Edit</button>
                </li>
            </ul>
        </form>
        {{/with}}

    </div>
</section>