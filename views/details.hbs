<section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">
                {{#with post}}
                <h1>Title: {{title}}</h1>
                {{/with}}
                <h3>Created by an author: {{owner}}</h3>
                {{#with post}}
                <div class="card_animal">
                    <p class="card-keyword">Keyword: {{keyword}}</p>
                    <p class="card-location">Location: {{location}}</p>
                    <p class="card-date">Date: {{date}}</p>
                </div>

                <p class="disc">Description: {{description}}.</p>
                {{/with}}
                <!-- If there is no registered user, do not display buttons-->
                <div class="social-btn">

                    {{#if isOwner}}
                    {{#with post}}
                    <!-- Only for registered user and author of the post -->
                    <a href="/all-posts/edit/{{_id}}" class="edit-btn">Edit</a>
                    <a href="/all-posts/delete/{{_id}}" class="del-btn">Delete</a>
                    {{/with}}
                    {{/if}}

                    {{#if isVotable}}
                    {{#with post}}
                    <!-- logged in users, who have not yet voted-->
                    <a href="/all-posts/upvote/{{_id}}" class="vote-up">UpVote +1</a>
                    <a href="/all-posts/downvote/{{_id}}" class="vote-down">DownVote -1</a>
                    {{/with}}
                    {{else if isLogged}}
                    <p class="thanks-for-vote">Thanks For Voting</p>
                    {{/if}}


                </div>
            </div>
        </div>
        <div class="card_right">
            {{#with post}}
            <img src="{{imageUrl}}" alt="image">
            {{/with}}
        </div>
    </div>
</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    {{#with post}}
                    <p class="PV">Total rating of votes: {{rating}}</p>
                    {{/with}}
                </div>
                {{#if emails}}
                <p class="disc">People who voted for the post - {{emails}}</p>
                {{else}}
                <p class="disc">People who voted for the post - No one has voted yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>